# 环境配置
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# 应用配置
APP_NAME=InvestIQ Platform
APP_VERSION=0.1.0
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_STR=/api/v1

# 数据库配置
DATABASE_URL=postgresql://investiq:investiq123@localhost:5432/investiq
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis配置
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=3600

# MinIO对象存储配置
MINIO_URL=http://localhost:9000
MINIO_ACCESS_KEY=investiq
MINIO_SECRET_KEY=investiq123
MINIO_BUCKET_NAME=investiq-data

# GPU和CUDA配置
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8
ENABLE_GPU_ACCELERATION=true

# AI模型配置
MODEL_CACHE_DIR=/app/models
HUGGINGFACE_CACHE_DIR=/app/models/huggingface
TRANSFORMERS_CACHE=/app/models/transformers

# LLM配置
LLM_MODEL_NAME=llama2-7b-chat
LLM_MAX_TOKENS=2048
LLM_TEMPERATURE=0.3
ENABLE_LOCAL_LLM=true

# 金融数据源配置
ENABLE_YFINANCE=true
ENABLE_AKSHARE=true
DATA_UPDATE_INTERVAL=300  # 5分钟

# 评分引擎配置
INDUSTRY_SCORE_WEIGHTS_P=0.35
INDUSTRY_SCORE_WEIGHTS_E=0.25
INDUSTRY_SCORE_WEIGHTS_M=0.25
INDUSTRY_SCORE_WEIGHTS_R=0.15

EQUITY_SCORE_WEIGHTS_Q=0.30
EQUITY_SCORE_WEIGHTS_V=0.20
EQUITY_SCORE_WEIGHTS_M=0.25
EQUITY_SCORE_WEIGHTS_C=0.15
EQUITY_SCORE_WEIGHTS_S=0.10

# 四闸门阈值配置
GATE_INDUSTRY_THRESHOLD=70
GATE_EQUITY_THRESHOLD=70
GATE_VALUATION_PERCENTILE_MAX=0.7
GATE_GROWTH_PERCENTILE_MAX=0.8
GATE_PEG_MAX=1.5

# 流动性配置
LIQUIDITY_PARTICIPATION_RATE_A=0.10
LIQUIDITY_PARTICIPATION_RATE_H=0.08
LIQUIDITY_EXIT_DAYS_CORE=5
LIQUIDITY_EXIT_DAYS_TACTICAL=3
LIQUIDITY_ADV_MIN_A=30000000
LIQUIDITY_ADV_MIN_H=20000000
LIQUIDITY_TURNOVER_MIN_A=0.005
LIQUIDITY_TURNOVER_MIN_H=0.003

# 投资组合配置
PORTFOLIO_LEVERAGE_MAX=1.10
PORTFOLIO_TIER_A_MIN=0.12
PORTFOLIO_TIER_A_MAX=0.15
PORTFOLIO_TIER_B_MIN=0.08
PORTFOLIO_TIER_B_MAX=0.10
PORTFOLIO_TIER_C_MIN=0.03
PORTFOLIO_TIER_C_MAX=0.05

# 回撤断路器配置
CIRCUIT_BREAKER_LEVEL_1=-0.10
CIRCUIT_BREAKER_LEVEL_2=-0.20
CIRCUIT_BREAKER_LEVEL_3=-0.30

# 告警配置
ALERT_THROTTLE_EVENT_MINUTES=60
ALERT_THROTTLE_KPI_MINUTES=1440
ALERT_THROTTLE_TREND_DAYS=5
ALERT_ESCALATION_P3_TO_P2_HITS=3
ALERT_ESCALATION_P2_TO_P1_HITS=2

# 监控配置
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# Celery配置
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=["json"]
CELERY_TIMEZONE=Asia/Shanghai

# 安全配置
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1", "0.0.0.0"]

# 日志配置
LOG_FORMAT=json
LOG_FILE=/app/logs/investiq.log
LOG_ROTATION=1 day
LOG_RETENTION=30 days

# 开发工具配置
ENABLE_DOCS=true
ENABLE_REDOC=true
ENABLE_OPENAPI=true
